<%= render "/error_overlay" %>

<h2 class="thank-you-message">You just became part of the world's biggest game of telephone ever.</h2>
<div class="cta-share">
    <p class="cta-sentence">To keep it going, pass it to somebody else:</p>
    <ul class="cta-actions">
        <li><a href="/" class="js-copy-to-clip share-copy">copy link</a></li>
        <li><a href="mailto:?Subject=you%20should%20add%20to%20this%20giant%20game%20of%20online%20telephone.%20&Body=i%20added%20to%20it%2C%20you%20should%20too%3A%0A%0Ahttp%3A//www.theworldsbiggestgameoftelephoneever.com" target="_blank" class="share-email">email</a></li>
        <li><a href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fwww.theworldsbiggestgameoftelephoneever.com" target="_blank">fb</a></li>
        <li><a href="http://ctt.ec/SU52B" target="_blank">tw</a></li>
    </ul>
    <div class="contact-thankyou">
        <%= mail_to "thetelephoneoperators@gmail.com", "Something wrong?", subject: "Something's wrong." %>
    </div>
</div>
<div id="js-init-thankyou" class="wrapper-thin-container">
    <div class="js-node-sack wrapper-thin">
        <figure class="holder-main js-holder" id="js-blank-sentence" data-rank>
            <div class="holder-sentence">
                <p class="saved-sentence"></p>
            </div>
            <%= render "conversations/node_more" %>
        </figure>

        <figure class="holder-main js-holder" id="js-blank-picture" data-rank>
            <div class="holder-picture">
                <img class="saved-picture" />
            </div>
            <%= render "conversations/node_more" %>
        </figure>
    </div>
    <div class="submission-loading">
        <%= render 'shared/loading' %>
    </div>
</div>

